<h1 class="text-4xl font-bold text-gray-900 mb-6">Data Flow Runs</h1>

<div class="flex flex-wrap items-center gap-4 mb-8 text-sm">
  <%= link_to "â† Back to Data Flow", "/active_data_flow/data_flows/#{@data_flow_runs.first&.data_flow_id}", class: "text-indigo-600 hover:text-indigo-700 font-medium" %>
  <% if @data_flow_runs.any? %>
    <span class="text-gray-400">|</span>
    <%= button_to "ðŸ—‘ï¸ Purge All Runs", "/active_data_flow/data_flows/#{@data_flow_runs.first.data_flow_id}/data_flow_runs/purge", 
                  method: :delete, 
                  data: { turbo_confirm: "Are you sure you want to delete all runs for this data flow?" },
                  class: "text-red-600 hover:text-red-700 font-semibold bg-transparent border-0 p-0 cursor-pointer" %>
  <% end %>
</div>

<% if @data_flow_runs.any? %>
  <div class="bg-white rounded-lg shadow-sm overflow-hidden border border-gray-200">
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ID</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Data Flow</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">First ID</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Last ID</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Run After</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Started At</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Ended At</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Duration</th>
          </tr>
        </thead>
        <tbody class="bg-white">
          <% @data_flow_runs.each do |run| %>
            <tr class="border-b border-gray-200 hover:bg-gray-50 transition-colors">
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= run.id %></td>
              <td class="px-6 py-4 whitespace-nowrap text-sm">
                <%= link_to run.data_flow.name, "/active_data_flow/data_flows/#{run.data_flow_id}", class: "text-indigo-600 hover:text-indigo-700 font-medium" %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <span class="<%= status_badge_classes(run.status) %> text-xs">
                  <%= run.status.upcase %>
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600"><%= run.first_id || '-' %></td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600"><%= run.last_id || '-' %></td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">
                <%= run.run_after.strftime('%Y-%m-%d %H:%M:%S') %>
                <% if run.run_after > Time.current %>
                  <span class="text-green-600 text-xs">(in <%= distance_of_time_in_words(Time.current, run.run_after) %>)</span>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600"><%= run.started_at ? run.started_at.strftime('%Y-%m-%d %H:%M:%S') : '-' %></td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600"><%= run.ended_at ? run.ended_at.strftime('%Y-%m-%d %H:%M:%S') : '-' %></td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">
                <% if run.started_at && run.ended_at %>
                  <%= distance_of_time_in_words(run.started_at, run.ended_at) %>
                <% else %>
                  -
                <% end %>
              </td>
            </tr>
            <% if run.error_message.present? %>
              <tr class="bg-red-50">
                <td colspan="9" class="px-6 py-4">
                  <div class="text-sm">
                    <span class="font-medium text-red-800">Error:</span>
                    <pre class="mt-2 text-xs text-red-700 bg-red-100 p-3 rounded overflow-x-auto font-mono"><%= run.error_message %></pre>
                  </div>
                </td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
<% else %>
  <div class="bg-white rounded-lg shadow-sm p-12 text-center border border-gray-200">
    <div class="text-gray-400 text-6xl mb-4">ðŸ“Š</div>
    <p class="text-xl text-gray-600">No runs found.</p>
  </div>
<% end %>
