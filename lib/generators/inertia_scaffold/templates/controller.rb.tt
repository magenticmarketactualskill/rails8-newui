class <%= class_name.pluralize %>Controller < ApplicationController
  before_action :set_<%= file_name %>, only: %i[show edit update destroy]

  # GET /<%= file_name.pluralize %>
  def index
    @<%= file_name.pluralize %> = <%= class_name %>.all
    render inertia: true
  end

  # GET /<%= file_name.pluralize %>/1
  def show
    render inertia: true
  end

  # GET /<%= file_name.pluralize %>/new
  def new
    @<%= file_name %> = <%= class_name %>.new
    render inertia: true
  end

  # GET /<%= file_name.pluralize %>/1/edit
  def edit
    render inertia: true
  end

  # POST /<%= file_name.pluralize %>
  def create
    @<%= file_name %> = <%= class_name %>.new(<%= file_name %>_params)

    if @<%= file_name %>.save
      redirect_to <%= file_name %>_path(@<%= file_name %>), notice: '<%= class_name %> was successfully created.'
    else
      render inertia: true, status: :unprocessable_entity
    end
  end

  # PATCH/PUT /<%= file_name.pluralize %>/1
  def update
    if @<%= file_name %>.update(<%= file_name %>_params)
      redirect_to <%= file_name %>_path(@<%= file_name %>), notice: '<%= class_name %> was successfully updated.'
    else
      render inertia: true, status: :unprocessable_entity
    end
  end

  # DELETE /<%= file_name.pluralize %>/1
  def destroy
    @<%= file_name %>.destroy
    redirect_to <%= file_name.pluralize %>_path, notice: '<%= class_name %> was successfully destroyed.'
  end

  private

  def set_<%= file_name %>
    @<%= file_name %> = <%= class_name %>.find(params[:id])
  end

  def <%= file_name %>_params
    params.require(:<%= file_name %>).permit(<%= attributes.map { |a| ":#{a.name}" }.join(', ') %>)
  end
end
